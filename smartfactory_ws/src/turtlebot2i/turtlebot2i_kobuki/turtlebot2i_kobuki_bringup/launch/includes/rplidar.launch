<launch>
  <arg name="frame_id" default="lidar_link" />
  <arg name="serial_port" default="/dev/rplidar" />
  <!--<arg name="serial_baudrate" default="115200" />--> <!-- A1/A2 -->
  <arg name="serial_baudrate" default="256000" /> <!-- A3 -->
  <arg name="scan_mode" default="Sensitivity" /> <!-- A3 -->

  <node name="rplidarNode"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
    <param name="serial_port"         type="string" value="$(arg serial_port)"/>
    <param name="frame_id"            type="string" value="$(arg frame_id)"/>
    <param name="serial_baudrate"     type="int"    value="$(arg serial_baudrate)"/>
    <param name="inverted"            type="bool"   value="false"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
    <param name="scan_mode"           type="string" value="$(arg scan_mode)"/>
  </node>
</launch>
