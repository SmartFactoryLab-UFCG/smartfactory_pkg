<launch>
  <arg name="3d_sensor"   default="astra"/>
  <arg name="camera" default="camera"/>  
  <arg name="depth" default="depth" />
  <arg name="scan_topic" default="scan"/>
  <include file="$(find-pkg-share turtlebot2i_bringup)/launch/includes/3dsensor/$(var 3d_sensor).launch.xml"/>

  <!--                        Laserscan 
    This uses lazy subscribing, so will not activate until scan is requested.
  -->
  <node pkg="depthimage_to_laserscan" name="depthimage_to_laserscan" exec="depthimage_to_laserscan_node">
      <param name="scan_time" value="10"/>
      <param name="output_frame" value="$(var camera)_depth_frame/teste"/>
      <remap from="depth" to="$(var camera)/$(var depth)/image_raw/teste"/>
      <remap from="scan" to="$(var scan_topic)/teste"/>
  </node>
</launch>
